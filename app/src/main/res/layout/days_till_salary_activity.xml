<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.antony.messageanalizer.context.TotalAmountFragment"
    android:weightSum="1"
    android:background="#ffffffff"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/tillSalaryHeader"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_gravity="top"
        android:gravity="center">

        <TextView
            android:layout_width="262dp"
            android:layout_height="41dp"
            android:text="@string/daysTillSalaryHeaderText"
            android:id="@+id/tillSalaryHeaderText"
            android:textColor="#ff000000"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.00"
            android:singleLine="true"
            android:textSize="10pt"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tillSalaryInfoLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.80"
        android:gravity="center"
        android:weightSum="1"
        >

        <TextView
            android:layout_width="239dp"
            android:layout_height="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/daysTillSalaryText"
            android:id="@+id/daysTillSalary"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#ff000000"
            android:textSize="25pt"
            android:textIsSelectable="false"
            android:singleLine="true"
            android:layout_marginBottom="100dip"/>
    </LinearLayout>

</LinearLayout>
